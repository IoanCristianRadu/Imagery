<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.imagery">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".journal.GalleryActivity"
            android:parentActivityName=".journal.JournalActivity"></activity>
        <activity
            android:name=".journal.EditJournalPostActivity"
            android:parentActivityName=".journal.JournalActivity"></activity>
        <activity android:name=".journal.JournalActivity" />
        <activity android:name=".account.Login" />
        <activity android:name=".account.RegisterAccount" />
        <activity android:name=".tabhost.FrontPageTabHost">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".journal.NewPostActivity" />
    </application>

</manifest>